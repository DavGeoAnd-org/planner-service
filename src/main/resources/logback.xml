<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{ISO8601} %-5.5level %-15.15thread %-30.30logger{1} - %msg %rootException{20}%n</pattern>
        </encoder>
    </appender>

    <logger name="com.davgeoand.api" level="${JAVALIN_SERVICE_LOGGING:-INFO}"/>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>